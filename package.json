{
  "name": "bookogsend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=website",
    "dev:bo": "turbo dev --filter=backoffice",
    "dev:email": "turbo dev --filter=@bookogsend/email",
    "start": "turbo start",
    "prisma": "npm run prisma -w packages/db --",
    "db:generate": "npm run prisma generate",
    "db:push": "npm run prisma db push --",
    "predb:push": "node packages/db/create-extensions.js",
    "lint": "turbo lint",
    "types": "turbo types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "postinstall": "npm run db:generate",
    "weekly-billing": "curl http://localhost:3000/api/cron/weekly-billing",
    "stripe": "dotenv -e ./.env -- sh -c 'stripe listen --forward-to localhost:3000/api/webhooks/stripe --api-key $STRIPE_SECRET_KEY'",
    "qstash": "qstash-cli dev",
    "finance:generate": "cd scripts && node generate-all.mjs",
    "finance:transform": "cd scripts && node transform-data.mjs",
    "finance:trends": "cd scripts && node generate-trends.mjs",
    "finance:budgets": "cd scripts && node generate-budgets.mjs"
  },
  "devDependencies": {
    "@upstash/qstash-cli": "^2.28.3",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "packageManager": "npm@10.8.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "volta": {
    "node": "22.18.0"
  }
}
