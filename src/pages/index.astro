---

import "../styles/global.css"
import Layout from "@/layouts/Layout.astro"
import { Button } from "@/components/ui/button"
import { ModeToggle } from '@/components/app/ModeToggle';
import { Header } from "@/components/app/Header.tsx"

---
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>

<html>
  <head>
    <title>FinTracker</title>
  </head>
  <body class="font-display">
    <Header>
      <ModeToggle slot="theme-toggle" client:load />
    </Header>
    <Layout>
      <p class="text-green-800">Helllo</p>
      <Button>Get Started</Button>
      <Button variant="outline">Get Started</Button>
      <Button variant="secondary">Get Started</Button>
      <Button variant="destructive">Get Started</Button>
      <Button variant="link">Get Started</Button>
    </Layout>
  </body>
</html>
